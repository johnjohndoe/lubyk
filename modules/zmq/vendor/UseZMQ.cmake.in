#
# This file sets up include directories, link directories, and
# compiler settings for a project to use ZMQ.  It should not be
# included directly, but rather through the ZMQ_USE_FILE setting
# obtained from ZMQConfig.cmake.
#

IF(ZMQ_BUILD_SETTINGS_FILE AND NOT SKIP_ZMQ_BUILD_SETTINGS_FILE)
  INCLUDE(${CMAKE_ROOT}/Modules/CMakeImportBuildSettings.cmake)
  CMAKE_IMPORT_BUILD_SETTINGS(${ZMQ_BUILD_SETTINGS_FILE})
ENDIF(ZMQ_BUILD_SETTINGS_FILE AND NOT SKIP_ZMQ_BUILD_SETTINGS_FILE)

# Add compiler flags needed to use ZMQ.
SET(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} ${ZMQ_REQUIRED_C_FLAGS}")
SET(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} ${ZMQ_REQUIRED_CXX_FLAGS}")
SET(CMAKE_EXE_LINKER_FLAGS "${CMAKE_EXE_LINKER_FLAGS} ${ZMQ_REQUIRED_LINK_FLAGS}")
SET(CMAKE_SHARED_LINKER_FLAGS "${CMAKE_SHARED_LINKER_FLAGS} ${ZMQ_REQUIRED_LINK_FLAGS}")
SET(CMAKE_MODULE_LINKER_FLAGS "${CMAKE_MODULE_LINKER_FLAGS} ${ZMQ_REQUIRED_LINK_FLAGS}")

# Add include directories needed to use ZMQ.
INCLUDE_DIRECTORIES(BEFORE ${ZMQ_INCLUDE_DIRS})

# Add link directories needed to use ZMQ.
LINK_DIRECTORIES(${ZMQ_LIBRARY_DIRS} ${ZMQ_DIR})

